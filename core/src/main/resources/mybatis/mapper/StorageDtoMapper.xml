<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ru.exam.ruzana.repository.StorageDtoRepository">

    <resultMap id="StorageDto" type="ru.exam.ruzana.dto.StorageDto"
               autoMapping="true">
    </resultMap>
    <update id="buyStorage">
        update storage
        set quantity = #{quantity}
        where id = #{id}
    </update>

</mapper>
